<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".activitys.QRscanner">


        <TextView

            android:id="@+id/QrScanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sourcesans"
            android:text="@string/qr_placeholder"
            android:textAlignment="center"
            android:textSize="40sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/qrAnim"
            android:layout_width="wrap_content"
            android:layout_height="400sp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_scale="2.0"
            app:lottie_rawRes="@raw/qrstation" />
        <Button
            android:id="@+id/qrbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/sourcesans"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:drawableEnd="@drawable/ic_baseline_qr_code_24"
            android:text="@string/tv_take_qr"
            android:textAllCaps="false" />

</LinearLayout>
